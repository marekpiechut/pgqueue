		"concurrently": "^9.1.2",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"husky": "^9.0.11",
		"shx": "^0.3.4",
		"tsc-alias": "^1.8.10",
